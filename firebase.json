{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/firebase-messaging-sw.js",
        "headers": [
          {
            "key": "Service-Worker-Allowed",
            "value": "/"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/checkReminders",
        "function": "checkReminders"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}